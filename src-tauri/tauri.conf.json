{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-kit",
  "version": "0.1.0",
  "identifier": "com.tauri-kit.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tauri-kit",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "rpm",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],

    "linux": {
      "rpm": {
        "depends": [
          "alacritty",
          "bash"
        ]
      },
      "deb": {
        "depends": [
          "alacritty",
          "bash"
        ]
      }
    }
  }
}
